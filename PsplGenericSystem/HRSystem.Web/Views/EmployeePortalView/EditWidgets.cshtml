@{
    Layout = "~/Views/Shared/_Layout1.cshtml";
}
<style>
    .form-control {
        height: 36px;
    }
</style>

<div class="panel panel-default">
    <div class="panel-heading">
        <h2 class="panel-title">Menu Widget</h2>
    </div>
    <div class="panel-body">
           @using (Html.BeginForm("AddWidget", "EmployeePortalView", FormMethod.Post))
        {
            <div class="">

                <fieldset>
                    <input class="text large" id="Id" name="Id" type="text" value="@ViewData["id"]" style="display:none;">
                    <input type="hidden" id="hdnId" value="@ViewBag.Id" />
                </fieldset>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.Label("Zone", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("Zone", new List<SelectListItem> {
                                 new SelectListItem{Text="Header"},
                                 new SelectListItem{Text="AsideFirst"},
                                 new SelectListItem{Text="Content"},
                                 new SelectListItem{Text="AsideSecond"},
                                 new SelectListItem{Text="Footer"}
                                 }, new { @class = "form-control" })
                        <span class="hint">The Zone in the Layout where the Widget will be rendered.</span>
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("Layer", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("LayerId", new List<SelectListItem> {
                                 new SelectListItem{Text="Default",Value="3"},
                                 new SelectListItem{Text="Authenticated",Value="4"},
                                 new SelectListItem{Text="Anonymous",Value="5"},
                                 new SelectListItem{Text="Disabled",Value="6"},
                                 new SelectListItem{Text="TheHomepage",Value="7"}
                                 }, new { @class = "form-control" })
                        <span class="hint">The Layer where the Widget will be rendered.</span>
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("Position", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.Editor("Position", new { htmlAttributes = new { @class = "form-control", @Value = ViewData["position"] } })
                        <span class="hint">The position of the Widget inside the Zone.</span>
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("Title", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.Editor("Title", new { htmlAttributes = new { @class = "form-control", @Value = ViewData["Title"] } })
                        <span class="hint">The title of the Widget.</span><br />
                    </div>
                </div>
                <div class="form-group">
                    @Html.Label("RenderTitle", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.CheckBox("RenderTitle", new { @Value = ViewData["RenderTitle"] })
                        <label class="forcheckbox" for="RenderTitle">Check to render the title on the front-end, uncheck to hide</label>
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("Name", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.Editor("Name", new { htmlAttributes = new { @class = "form-control", @Value = ViewData["Name"] } })
                        <span class="hint">The technical name of the Widget, used for css class and alternates.</span>
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("CssClass", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.Editor("CssClass", new { htmlAttributes = new { @class = "form-control", @Value = ViewData["CssClass"] } })
                        <span class="hint">Add custom css classes for the widget separated by spaces.</span>
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("Owner", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.Editor("Owner", new { htmlAttributes = new { @class = "form-control", @Value = ViewData["Owner"], @readonly = "readonly" } })
                    </div>
                </div>

                <div class="form-group" style="text-align:center;">
                    <div class="col-md-offset-2 col-md-10">
                        <input id="btnSave" type="submit" value="Save" class="btn btn-primary" />
                        <input id="cancel" type="button" onclick="location.href='@Url.Action("Widgets","EmployeePortalView")'" class="btn btn-primary" value="Cancel" />
                    </div>
                </div>
            </div>
        }
        </div>
    </div>


 <script type="text/javascript">
    $(document).ready(function () {
        $("#Zone").val("@ViewData["widgetzone"]");
        $("#LayerId").val("@ViewData["layer"]");
        $("#btnSave").click(function () {
            if ($("#Title").val() == "") {
                alert("Please enter Title field!");
                return false;
            }
            if ($("#Name").val() == "") {
                alert("Please enter Name field!");
                return false;
            }
        });
    });
        </script>


