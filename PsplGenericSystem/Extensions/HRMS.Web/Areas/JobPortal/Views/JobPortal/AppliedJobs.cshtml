@model IList<HRMS.Web.ViewModels.AppliedJobsFormModel>
@using HRMS.Common.Enums;
@{
    ViewBag.Title = "AppliedJobs";
    Layout = "~/Areas/JobPortal/Views/Shared/_JobPortalMaster.cshtml";
}

<h2>AppliedJobs</h2>


<div id="gridContent" style="padding-top: 10px;">
    <table class="footable table" data-filter="#filter" data-page-size="5" data-page-previous-text="prev" data-page-next-text="next" id="appliedJobsGridContent">
        <thead>
            <tr>
                <th data-toggle="true">
                    @Html.DisplayName("Job Title")
                </th>
                <th data-hide="phone">
                    @Html.DisplayName("Job Applied On")
                </th>
                <th data-hide="phone">
                    @Html.DisplayName("Job Location")
                </th>
                <th data-hide="phone,tablet">
                    @Html.DisplayName("Status")
                </th>
            </tr>
        </thead>
        <tbody>
            @for (var i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => modelItem[i].JobTitle)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => modelItem[i].JobAppliedOn)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => modelItem[i].JobLocation)
                    </td>
                    @*<td>
                            @Html.DisplayFor(modelItem => modelItem[i].JobStatus)
                        </td>*@
                    <td>
                        @{
                         var jobAppliedStatus = @Model[i].JobStatus;
                        }
                        @if (jobAppliedStatus != null)
                        {
                            @Html.Label(((GeneralEnum.JobApplicationStatus)@Model[i].JobStatus).ToString())
                        }
                    </td>

                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="8">
                    <div class="pagination pagination-centered hide-if-no-paging"></div>
                </td>
            </tr>
        </tfoot>
    </table>
</div>

