@model @HRMS.Service.Models.EDM.HolidayGroup
@using System.Web.Optimization;
@using HRMS.Web.Helper;
@{
    ViewBag.Title = "EditHolidayGroup";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}

<html>
<body>

    @using (Html.BeginForm("AddHolidayGroupDetail", "HolidayGroup", FormMethod.Post))
    {
        @Html.ValidationSummary(true)

        <div class="form-horizontal">
            <div class="form-group">
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(m => m.HolidayGroupName, new { @class = "col-sm-4 control-label required" })
                        <div class="col-sm-8">
                            @Html.TextBoxFor(m => m.HolidayGroupName, new { @class = "form-control", placeholder = "Holiday Name" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.HolidayDescription, new { @class = "col-sm-4 control-label" })
                        <div class="col-sm-8">
                            @Html.TextBoxFor(m => m.HolidayDescription, new { @class = "form-control", placeholder = "Holiday Description" })
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 control-button">
                <button type="submit" id="btnsubmit" class="btn btn-success">Save</button>
                @Html.ActionLink("Cancel", "SelectAllHolidayGroupDetails", "HolidayGroup", new { @CompanyId = GlobalsVariables.CurrentCompanyId }, new { @class = "btn btn-success" })
            </div>
        </div>

    }



    <script type="text/javascript">
        $(document).ready(function () {
            var resultingSiteview = "<h1>HolidayGroup <small>Edit Holiday Group </small></h1><ol class=" + '"breadcrumb"' + "><li><a href=" + '"../Home/EmployeeDashboard"' + "><i class=" + '"fa fa-dashboard"' + "></i>Home</a></li><li class=" + '"active"' + ">HolidayGroup</li></ol>";
            $("#header-section").empty();
            $("#header-section").html(resultingSiteview);
        });
    </script>

</body>
</html>



