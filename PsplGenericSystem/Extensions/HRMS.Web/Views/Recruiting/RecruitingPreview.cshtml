@using (Html.BeginForm("RecruitingPreview", "Recruiting", FormMethod.Post, new { id = "RecruitingPreview" }))
{
<fieldset>
    <div class="form-horizontal">
        <div class="col-sm-8">


            <div class="form-group">
                @Html.LabelFor(m => m.Title, new { @class = "col-sm-4 col-xs-6 control-label"})
                    <div class="col-sm-6 col-xs-6 control-label">
                        <div class="input-group">
                            @Html.DisplayFor(m => m.Title)
                        </div>
                    </div>
            </div>


            <div class="form-group">
                @Html.LabelFor(m => m.CityStateOrZipCode, new { @class = "col-sm-4 col-xs-6 control-label" })
                <div class="col-sm-6 col-xs-6 control-label">
                    <div class="input-group">
                        @Html.DisplayFor(m => m.CityStateOrZipCode)
                    </div>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.JobCategory, new { @class = "col-sm-4 col-xs-6 control-label" })
                  <div class="col-sm-4 col-xs-6 control-label">
                      <div class="input-group">
                          @Html.DisplayFor(m => m.JobCategoryDesc)
                      </div>
                  </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.JobDescription, new {@class = "col-sm-4 col-xs-6 control-label" })
                  <div class="col-sm-5 col-xs-6 control-label">
                      <div class="input-group">
                          @Html.DisplayFor(m => m.JobDescription)
                      </div>
                  </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.CompanyDescription, new { @class = "col-sm-4 col-xs-6 control-label" })
                  <div class="col-sm-4 col-xs-6 control-label">
                      <div class="input-group">
                          @Html.DisplayFor(m => m.CompanyDescription) 
                      </div>
                  </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.HiringManagerName, new { @class = "col-sm-4 col-xs-6 control-label" })
                 <div class="col-sm-4 col-xs-6 control-label">
                     <div class="input-group">
                         @Html.DisplayFor(m => m.HiringManagerName) 
                     </div>
                 </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.RecruiterNames, new { @class = "col-sm-4 col-xs-6 control-label" })
                  <div class="col-sm-8 col-xs-8 control-label">
                      <div class="input-group">
                          @Html.DisplayFor(m => m.RecruiterNames, new { @class = "form-control" }) 
                      </div>
                  </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.PostDate, new { @class = "col-sm-4 col-xs-6 control-label" })
                 <div class="col-sm-4 col-xs-6 control-label">
                     <div class="input-group">
                         @Html.DisplayFor(m => m.PostDate) 
                     </div>
                 </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Comments, new { @class = "col-sm-4 col-xs-6 control-label"})
                  <div class="col-sm-6 col-xs-6 control-label">
                      <div class="input-group" style="width: 100%;">
                          @Html.TextAreaFor(m => m.Comments, new { @class = "form-control" })
                      </div>
                  </div>
            </div>
            @Html.HiddenFor(m=>m.JobProfileId)
            @Html.HiddenFor(m=>m.ManagerActionFlag, new {@id ="hdActionFlag"})

        </div>
        <div class="col-sm-6">
            
            <button type="submit" class="btn btn-success" id="btnReject">Reject</button>
            <button type="submit" class="btn btn-success" id="btnApprove">Approve</button>

        </div>


    </div>
</fieldset>
}

<script type="text/javascript">
    $(document).ready(function () {
        //debugger;
        var value = $('#hdActionFlag').val();

        if (value == "True") {
            $("#btnApprove").hide();
            $("#btnReject").hide();
        }
        else {
            $("#btnApprove").show();
            $("#btnReject").show();
        }
    });
</script>

