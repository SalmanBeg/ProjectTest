                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.EmployeeSnapshot.Department, new { @class = "col-sm-4 col-xs-6 control-label" })
                    <div class="col-sm-4 col-xs-6 control-label">
                        <div class="input-group">
                            @Html.DisplayFor(m => m.EmployeeSnapshot.Department)
