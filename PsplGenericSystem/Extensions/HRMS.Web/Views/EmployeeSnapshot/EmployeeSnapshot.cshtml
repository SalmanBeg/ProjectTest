                    <div class="col-sm-4 col-xs-6 control-label">
                        <div class="input-group">
                            @Html.DisplayFor(m => m.EmployeeEmergencyContact.CellPhone, new { @class = "phonemask" })
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.EmployeeEmergencyContact.PersonalEmail, new { @class = "col-sm-4 col-xs-6 control-label" })
                    <div class="col-sm-4 col-xs-6 control-label">
                        <div class="input-group">
                            @Html.DisplayFor(m => m.EmployeeEmergencyContact.PersonalEmail)
