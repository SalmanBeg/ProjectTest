@model HRMS.Web.ViewModels.ApplicationInfoFormModel
@{
    ViewBag.Title = "AddEmploymentInfo";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}

<h3>AddEducationInfo</h3>
@using (Html.BeginForm("AddEmploymentInfo", "ApplicationInfo", FormMethod.Post))
{
    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(k => k.ApplicantEmploymentHistory.Title, new { @class = "col-sm-3 control-label required" })
                    <div class="col-sm-9">
                        @Html.TextBoxFor(k => k.ApplicantEmploymentHistory.Title, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(k => k.ApplicantEmploymentHistory.Description, new { @class = "col-sm-3 control-label " })
                    <div class="col-sm-9">
                        @Html.TextBoxFor(k => k.ApplicantEmploymentHistory.Description, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(k => k.ApplicantEmploymentHistory.Location, new { @class = "col-sm-3 control-label " })
                    <div class="col-sm-9">
                        @Html.TextBoxFor(k => k.ApplicantEmploymentHistory.Location, new { @class = "form-control" })
                    </div>
                </div>
               
                <div class="form-group">
                    @Html.LabelFor(k => k.ApplicantEmploymentHistory.EmploymentStartDate, new { @class = "col-sm-3 control-label " })
                    <div class="col-sm-9">
                        <div class="input-group">
                            @Html.TextBoxFor(m => m.ApplicantEmploymentHistory.EmploymentStartDate, (Model.ApplicantEmploymentHistory.EmploymentStartDate == null ? "" : ((DateTime)Model.ApplicantEmploymentHistory.EmploymentStartDate).ToString("MM/dd/yyyy")), new { @class = "form-control dateControl", @id = "txtstartdate", @maxlength = 10 })
                            <label for="txtstartdate" class="input-group-addon btn">
                                <span class="glyphicon glyphicon-calendar"></span>
                            </label>
                        </div>
                    </div>
                </div>              
                @*<div class="form-group">
                    @Html.LabelFor(k => k.ApplicantEmploymentHistory.EmploymentEndDate, new { @class = "col-sm-3 control-label" })
                    <div class="col-sm-9">
                        @Html.TextBoxFor(k => k.ApplicantEmploymentHistory.EmploymentEndDate, new { @class = "form-control" })
                    </div>
                </div>*@
                <div class="form-group">
                    @Html.LabelFor(k => k.ApplicantEmploymentHistory.EmploymentEndDate, new { @class = "col-sm-3 control-label " })
                    <div class="col-sm-9">
                        <div class="input-group">
                            @Html.TextBoxFor(m => m.ApplicantEmploymentHistory.EmploymentEndDate, (Model.ApplicantEmploymentHistory.EmploymentEndDate == null ? "" : ((DateTime)Model.ApplicantEmploymentHistory.EmploymentEndDate).ToString("MM/dd/yyyy")), new { @class = "form-control dateControl", @id = "txtenddate", @maxlength = 10 })
                            <label for="txtenddate" class="input-group-addon btn">
                                <span class="glyphicon glyphicon-calendar"></span>
                            </label>
                        </div>
                    </div>
                </div>
               
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 control-button">
            
            @Html.ActionLink("Cancel", "AddApplicationInfo", null, new { @class = "btn btn-success" })
            <button type="submit" class="btn btn-success">Save</button>
        </div>
    </div>
}





