<script type="text/javascript">
    $(document).ready(function () {
        var resultingSiteview = "<h1>ReviewCriteria<small>Edit ReviewCriteria</small></h1><ol class=" + '"breadcrumb"' + "><li><a href=" + '"../Home/EmployeeDashboard"' + "><i class=" + '"fa fa-dashboard"' + "></i>Home</a></li><li class=" + '"active"' + ">ReviewCriteria</li></ol>";
        $("#header-section").empty();
        $("#header-section").html(resultingSiteview);



      

        $(".iCheck-helper").click(function () {
            var type = $(this).parent().find("#Listchk").attr("value")
            if (type == "List") {
                $("#dvitem").show();
            }
            else if (type == "Text" || type == "Value") {
                $("#dvitem").hide();
            }
        });

      
    });  
</script>


